        <ProcessIcons Inputs="Model.GetIngredientQuantities()" Outputs="Model.GetProductQuantities()" />        
    </Process>
    
    <Extra>
        <ImageBox Type="Machine" Id="Model.Machine?.Id" />
    </Extra>
</Summary4Up>