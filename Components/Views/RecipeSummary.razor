        <ProcessIcons Inputs="Model.GetIngredientIcons()" Outputs="Model.GetProductIcons()" />        
    </Process>
    
    <Extra>
        <ImageBox Value="Model.Machine?.Icon" />
    </Extra>
</Summary4Up>