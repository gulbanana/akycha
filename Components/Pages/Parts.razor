@page "/parts"
@page "/"
@using Microsoft.EntityFrameworkCore

@inherits DbPage
@code {
    private void AddPart()
    {
        DB.Add(new Part { Name = "New Part" });
        NotifyChanged();
    }
}

<PageTitle>Akycha - Parts</PageTitle>

<CascadingValue TValue="IUnitOfWork" IsFixed Value="this">
    <ListBox Header="@($"{DB.Parts.Count()} Parts")" Models="@DB.Parts.ToList()" AddCommand="AddPart">
        <PartSummary Model="context" />
    </ListBox>
</CascadingValue>