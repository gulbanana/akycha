@page "/Recipes/{id:int?}"
@using Microsoft.EntityFrameworkCore

@inherits DbPage
@code {
    [Parameter] public int? Id { get; set; }
}

<PageTitle>Akycha - Recipes</PageTitle>

<CascadingValue TValue="IUnitOfWork" IsFixed Value="this">
    <RoutedList @bind-Id="Id" Prefix="Recipes" Lens="db => db.Recipes">
        <Master>
            <RecipeSummary Model="context" />
        </Master>
        <Detail>
            <RecipeEditor Model="context" />
        </Detail>
    </RoutedList>
</CascadingValue>