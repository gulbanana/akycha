@using Microsoft.AspNetCore.Components.Authorization
@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public bool Small { get; set; }
    [Parameter(CaptureUnmatchedValues = true)] public IDictionary<string, object>? Splat { get; set; }
}

<AuthorizeView>
    <Authorized>
    <button class="@BEM.Class("command", (Small, "small"))" @attributes="Splat">
        @ChildContent
    </button>
    </Authorized>
    <NotAuthorized>
        <div class="@BEM.Class("placeholder command", (Small, "small"))">&nbsp;</div>
    </NotAuthorized>
</AuthorizeView>