@code {
    [Parameter] public byte[]? Value { get; set; }
    [Parameter] public int? SideLength { get; set; }
    [Parameter] public string? Tooltip { get; set; }
    private string src = "";

    protected override void OnParametersSet()
    {
        if (Value is null)
        {
            src = "Icon_Cross.png";
        }
        else
        {
            var data = Convert.ToBase64String(Value);
            src = $"data:image/png;base64,{data}";
        }
    }
}    
    
<figure class="icon">
    <img src="@src" title="@Tooltip" style="@(SideLength.HasValue ? $"--side-length: {SideLength.Value}px" : "")">
</figure>