@code {
    [EditorRequired, Parameter] public required string Type { get; set; }
    [EditorRequired, Parameter] public int? Id { get; set; }
    [Parameter] public int? SideLength { get; set; }
    [Parameter] public string? Tooltip { get; set; }

    private string src = "";

    protected override void OnParametersSet()
    {
        src = Id switch
        {
            null => "Icon_Cross.png",
            Quantity.PowerIcon => "ResIcon_Power.png",
            Quantity.TransportIcon => "ResIcon_Transport.png",
            Quantity.CouponIcon => "FICSIT_Coupon.png",
            int id => $"Icon/{Type}/{id}"
        };
    }
}    
    
<figure class="icon">
    <img src="@src" title="@Tooltip" style="@(SideLength.HasValue ? $"--side-length: {SideLength.Value}px" : "")">
</figure>